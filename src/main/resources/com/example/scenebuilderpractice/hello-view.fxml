<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #785964;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scenebuilderpractice.HelloController">
   <children>
      <ListView fx:id="songList" style="-fx-background-color: #72555f;" prefWidth="250.0" maxWidth="300.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="60.0"/>
      <StackPane AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="60.0">
         <VBox alignment="CENTER" spacing="10.0">
            <ImageView fx:id="albumPhoto" fitHeight="270.0" fitWidth="270.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="songName" alignment="CENTER" text="Song Name" textAlignment="CENTER" textFill="WHITE">
               <Label fx:id="songArtist" alignment="CENTER" text="Artist" textFill="WHITE"/>
               <font>
                  <Font name="AppleMyungjo Regular" size="13.0" />
               </font>
            </Label>
         </VBox>
      </StackPane>
      <ProgressBar fx:id="songProgressBar" prefHeight="20.0" progress="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="35.0" />
      <ToggleButton fx:id="playButton" text="Play" onAction="#playMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" prefHeight="34.0" prefWidth="59.0" AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="0.0" />
      <ToggleButton fx:id="pauseButton" text="Pause" onAction="#pauseMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" prefHeight="34.0" prefWidth="61.0" AnchorPane.leftAnchor="80.0" AnchorPane.bottomAnchor="0.0" />
      <ToggleButton fx:id="previousButton" text="Previous" onAction="#previousMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" prefHeight="34.0" prefWidth="77.0" AnchorPane.leftAnchor="150.0" AnchorPane.bottomAnchor="0.0" />
      <ToggleButton fx:id="nextButton" text="Next" onAction="#nextMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" prefHeight="34.0" prefWidth="82.0" AnchorPane.leftAnchor="240.0" AnchorPane.bottomAnchor="0.0" />
      <Slider fx:id="volumeSlider" blockIncrement="5.0" AnchorPane.leftAnchor="340.0" AnchorPane.rightAnchor="110.0" AnchorPane.bottomAnchor="10.0" />
      <ToggleButton fx:id="slowedButton" text="SLOWED" onAction="#slowMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" prefHeight="34.0" prefWidth="81.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="0.0" />
      <Button fx:id="importButton" text="IMPORT" onAction="#importMedia" style="-fx-background-color: #A6979C;" textFill="WHITE" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" />
   </children>
</AnchorPane>
